intf_libs = # Interface dependencies.
#import xxxx_libs += libhello%lib{hello}

lib{pcg-cpp}: include/{hxx ixx txx}{** -version} hxx{version} $intf_libs

# Include the generated version header into the distribution (so that we don't
# pick up an installed one) and don't remove it when cleaning in src (so that
# clean results in a state identical to distributed).
#
hxx{version}: in{version} $src_root/manifest
{
  dist  = true
  clean = ($src_root != $out_root)
}

# Build options.
#
cxx.poptions =+ "-I$out_root/include" "-I$src_root/include" "-I$out_root" "-I$src_root"

# Export options.
#
lib{pcg-cpp}:
{
  cxx.export.poptions = "-I$out_root/include" "-I$src_root/include" "-I$out_root" "-I$src_root"
  cxx.export.libs = $intf_libs
}

# Install into the pcg-cpp/ subdirectory of, say, /usr/include/
# recreating subdirectories.
#
{hxx ixx txx}{*}:
{
  install         = include/pcg-cpp/
  install.subdirs = true
}
