#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
// 
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
// 
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
// 
// Version      AAAAABBBBBCCCCCDDDE
// 
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
// 
#define PCG_CPP_VERSION       $pcg_cpp.version.project_number$ULL
#define PCG_CPP_VERSION_STR   "$pcg_cpp.version.project$"
#define PCG_CPP_VERSION_ID    "$pcg_cpp.version.project_id$"
#define PCG_CPP_VERSION_FULL  "$pcg_cpp.version$"

#define PCG_CPP_VERSION_MAJOR $pcg_cpp.version.major$
#define PCG_CPP_VERSION_MINOR $pcg_cpp.version.minor$
#define PCG_CPP_VERSION_PATCH $pcg_cpp.version.patch$

#define PCG_CPP_PRE_RELEASE   $pcg_cpp.version.pre_release$

#define PCG_CPP_SNAPSHOT_SN   $pcg_cpp.version.snapshot_sn$ULL
#define PCG_CPP_SNAPSHOT_ID   "$pcg_cpp.version.snapshot_id$"
